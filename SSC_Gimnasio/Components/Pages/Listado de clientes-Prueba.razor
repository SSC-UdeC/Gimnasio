@page "/ListaClientes"
@using SSC_Gimnasio.Modelos
@inject SSC_Gimnasio.Repositorios.IRepositorioClientes repositorioClientes
@inject NavigationManager Navigation

<h3 class="text-center my-4">Lista de Clientes</h3>

<div class="container">
    @if (clientes != null && clientes.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Teléfono</th>
                    <th>Teléfono de Emergencia</th>
                    <th>Fecha de Registro</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in clientes)
                {
                    <tr>
                        <td>@cliente.Id_Cliente</td>
                        <td>@cliente.Nombre</td>
                        <td>@cliente.Email</td>
                        <td>@cliente.Telefono</td>
                        <td>@cliente.Telefono_Emergencia</td>
                        <td>@cliente.Fecha_Registro</td>
                        <td>
                            <button class="btn btn-primary btn-sm" @onclick="() => EditarCliente(cliente.Id_Cliente)">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-danger btn-sm" @onclick="() => EliminarCliente(cliente.Id_Cliente)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No hay clientes registrados.</div>
    }
</div>

@code {
    private List<Clientes> clientes = new List<Clientes>();

    protected override async Task OnInitializedAsync()
    {
        clientes = await repositorioClientes.GetAll();
    }

    private void EditarCliente(int id)
    {
        Navigation.NavigateTo($"/editar-cliente/{id}");
    }

    private async Task EliminarCliente(int id)
    {
        await repositorioClientes.Delete(id);
        clientes = await repositorioClientes.GetAll();
    }
}
